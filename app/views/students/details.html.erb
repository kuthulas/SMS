<%= page_entries_info @checkins, :model => 'checkin' =%>
 <p id="notice"><%= notice %></p>

 <div style="display:inline-block;">
  <table>
    <tr>
      <td>
        <strong>First Name:</strong>
          <%= @student.fname %>
      </td>
      <td>
        <strong>Last Name:</strong>
          <%= @student.lname %>
      </td>
      <td>
        <strong>UIN:</strong>
          <%= @student.uin %>
      </td>
      <td>
        <strong>Email:</strong>
          <%= @student.email %>
      </td>
    </tr>
  </table>
</div>
<br> </br>

<%if !@checkins.empty? %>
  <table>
      <thead>
        <tr>
          <th>Event</th>
          <th>Term</th>
          <th>Date</th>
          <th>Location</th>
          <th>Time</th>
          <th>Check-in Time</th>
          <% if admin_signed_in? %>
            <th colspan = 2>Manage</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @checkins.each do |checkin| %>
          <tr>
            <td><%= checkin.event.name %></td>
            <td><%= checkin.event.term %></td>
            <td><%= checkin.event.date %></td>
            <td><%= checkin.event.location %></td>
            <td><%= checkin.event.time %></td>
            <td><%= l checkin.created_at, format: "%I:%M %p" %></td>
            <% if admin_signed_in? %>
            <td><%= link_to 'Edit', edit_checkin_path(checkin) %></td>
            <td><%= link_to 'Destroy', checkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>