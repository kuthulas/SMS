<p id="notice"><%= notice %></p>

<h3>Listing Students</h3>
<%= page_entries_info @students, :model => 'student' =%>. <%= link_to 'New Student', new_student_path %>
<br></br>
<h2>Import Students</h2>

<%= form_tag import_students_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
<br></br>
<table>
  <thead>
    <tr>
      <th>Uin</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Term</th>
      <th>Year</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.uin %></td>
        <td><%= student.fname %></td>
        <td><%= student.lname %></td>
        <td><%= student.term %></td>
        <td><%= student.year %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<p><%= will_paginate @students =%></p>
<br>
